<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/registroEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usuario_correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/registroPassword"
        app:layout_constraintBottom_toTopOf="@+id/botonConfirmarRegistro"
        app:layout_constraintStart_toStartOf="@+id/registroEmail"
        app:layout_constraintTop_toBottomOf="@+id/registroEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/botonConfirmarRegistro"
        app:layout_constraintStart_toStartOf="@+id/registroPassword"
        app:layout_constraintTop_toBottomOf="@+id/registroEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/confirmar" />

    <Button
        android:id="@+id/botonCancelarRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancelar"
        app:layout_constraintEnd_toEndOf="@+id/registroPassword"
        app:layout_constraintTop_toTopOf="@+id/botonConfirmarRegistro" />

    <TextView
        android:id="@+id/usuario_correo"
        app:layout_constraintStart_toStartOf="@+id/registroEmail"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/registrar" />
</androidx.constraintlayout.widget.ConstraintLayout>